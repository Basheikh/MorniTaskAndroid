<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item_blog_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@mipmap/ic_launcher"
            />
            <TextView
                android:id="@+id/txt_item_blog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Title Of Blog"
                android:layout_marginStart="@dimen/dim_10_dp"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginEnd="@dimen/dim_10_dp"
                android:layout_marginTop="@dimen/dim_10_dp"
                />
            <TextView
                android:id="@+id/txt_item_blog_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22/10/2001 11:00 PM"
                android:layout_marginStart="@dimen/dim_10_dp"
                android:layout_marginEnd="@dimen/dim_10_dp"
                android:layout_marginTop="@dimen/dim_10_dp"
                />

            <TextView
                android:id="@+id/txt_item_blog_smallDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:maxLines="3"
                android:text="22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM 22/10/2001 11:00 PM "
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_marginStart="@dimen/dim_10_dp"
                android:layout_marginEnd="@dimen/dim_10_dp"
                android:layout_marginBottom="@dimen/dim_10_dp"
                android:layout_marginTop="@dimen/dim_10_dp"/>

            <Button
                android:id="@+id/btn_item_blog_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_10_dp"
                android:layout_marginEnd="@dimen/dim_10_dp"
                android:layout_gravity="end"
                android:textColor="#ffffff"
                android:text="More"
                android:layout_marginTop="@dimen/dim_5_dp"
                android:layout_marginBottom="@dimen/dim_10_dp"
                android:background="@color/colorPrimary"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
